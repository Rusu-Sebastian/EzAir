<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.proiect.EditareContClientController" styleClass="root" stylesheets="@styles2.css">
   <children>
      <Label text="Editare informații cont">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      
      <VBox alignment="CENTER" spacing="10">
         <children>
            <HBox spacing="10" alignment="CENTER">
               <children>
                  <Label prefWidth="100" text="Nume:" />
                  <TextField fx:id="fieldNume" prefWidth="300" />
               </children>
            </HBox>
            
            <HBox spacing="10" alignment="CENTER_LEFT">
               <children>
                  <Label prefWidth="100" text="Prenume:" />
                  <TextField fx:id="fieldPrenume" prefWidth="300" />
               </children>
            </HBox>
            
            <HBox spacing="10" alignment="CENTER_LEFT">
               <children>
                  <Label prefWidth="100" text="Email:" />
                  <TextField fx:id="fieldEmail" prefWidth="300" />
               </children>
            </HBox>
            
            <HBox spacing="10" alignment="CENTER_LEFT">
               <children>
                  <Label prefWidth="100" text="Telefon:" />
                  <TextField fx:id="fieldTelefon" prefWidth="300" />
               </children>
            </HBox>
         </children>
      </VBox>
      
      <HBox spacing="20" alignment="CENTER">
         <children>
            <Button onAction="#salveazaModificari" text="Salvează" />
            <Button onAction="#anuleaza" text="Anulează" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
