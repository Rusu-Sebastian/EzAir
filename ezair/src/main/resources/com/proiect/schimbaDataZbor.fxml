<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.proiect.SchimbaDataZborController" styleClass="root" stylesheets="@styles.css">
   <children>
      <Label text="Schimbă data zborului">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      
      <VBox alignment="CENTER" spacing="10" styleClass="card">
         <children>
            <Label fx:id="labelDetaliiZbor" text="Zbor: București → Londra (27/05/2025, 10:30)" />
            
            <Label text="Selectează un alt zbor disponibil:" />
            <TableView fx:id="tabelZboruri">
               <columns>
                  <TableColumn fx:id="coloanaData" text="Data" />
                  <TableColumn fx:id="coloanaOra" text="Ora" />
                  <TableColumn fx:id="coloanaLocuri" text="Locuri" />
                  <TableColumn fx:id="coloanaPret" text="Preț" />
               </columns>
            </TableView>
         </children>
      </VBox>
      
      <HBox spacing="20" alignment="CENTER">
         <children>
            <Button fx:id="butonConfirma" onAction="#schimbaData" text="Confirmă" />
            <Button fx:id="butonAnuleaza" onAction="#anuleaza" text="Anulează" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
